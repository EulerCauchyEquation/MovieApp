<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@android:color/transparent">

    <!-- 배경 -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/snackbar_height"
        app:cardBackgroundColor="@color/WHITE"
        app:cardCornerRadius="@dimen/radius_median_8dp"
        app:cardElevation="@dimen/elevation_cardView_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- message -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_large_16dp"
        android:layout_marginVertical="@dimen/space_small_4dp"
        android:elevation="4dp"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/text_size_headline4_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/all_network_disconnected" />
</androidx.constraintlayout.widget.ConstraintLayout>