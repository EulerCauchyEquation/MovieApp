<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.hwonchul.movie.presentation.view.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/navigate_to_login"
            app:destination="@id/login"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/navigate_to_main"
            app:destination="@id/list_graph"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.hwonchul.movie.presentation.view.login.LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/navigate_to_phone_auth"
            app:destination="@id/phone_auth"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/navigate_to_main"
            app:destination="@id/list_graph"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/phone_auth"
        android:name="com.hwonchul.movie.presentation.view.auth.PhoneAuthFragment"
        tools:layout="@layout/fragment_phone_auth">

        <action
            android:id="@+id/navigate_to_phone_auth_check"
            app:destination="@id/phone_auth_check"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/phone_auth"
            app:popUpToInclusive="true"
            app:popUpToSaveState="true" />
    </fragment>

    <fragment
        android:id="@+id/phone_auth_check"
        android:name="com.hwonchul.movie.presentation.view.auth.PhoneAuthCheckFragment"
        tools:layout="@layout/fragment_phone_auth_check">

        <action
            android:id="@+id/navigate_to_main"
            app:destination="@id/list_graph"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/navigate_to_nick"
            app:destination="@id/nick"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/phone_auth"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nick"
        android:name="com.hwonchul.movie.presentation.view.login.signUp.InputNickFragment"
        tools:layout="@layout/fragment_input_nick">

        <action
            android:id="@+id/navigate_to_main"
            app:destination="@id/list_graph"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />
    </fragment>

    <include
        android:id="@id/list_graph"
        app:graph="@navigation/list_graph" />
</navigation>