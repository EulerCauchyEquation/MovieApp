<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_large_16dp"
        android:background="@drawable/bg_rect_white_rounded_4dp"
        android:foreground="@drawable/ripple_rectangle_radius_4dp"
        android:gravity="center"
        android:paddingHorizontal="@dimen/space_s_large_12dp"
        android:paddingVertical="@dimen/space_median_8dp"
        android:text="다시 시도"
        android:textSize="@dimen/text_size_headline3_18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/ic_empty_display" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/lineSpacingExtra_textView_5dp"
        android:text="알 수 없는 오류가 발생했습니다.\n인터넷 연결을 확인해 주세요."
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_headline5_15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_retry" />
</androidx.constraintlayout.widget.ConstraintLayout>